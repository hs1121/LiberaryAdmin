<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.liberaryadmin">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_app_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_app_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LiberaryAdmin">
        <activity android:name=".ReturnIssueList"  android:screenOrientation="portrait"/>
        <activity android:name=".ViewBookActivity"  android:screenOrientation="portrait"/>
        <activity android:name=".ViewCustomerActivity" android:screenOrientation="portrait"/>
        <activity android:name=".NewIssueActivity" android:screenOrientation="portrait"/>
        <activity android:name=".CustomerListActivity" android:screenOrientation="portrait"/>
        <activity android:name=".AddCustomerActivity" android:screenOrientation="portrait"/>
        <activity android:name=".AddBookActivity" android:screenOrientation="portrait"/>
        <activity android:name=".BookListActivity" android:screenOrientation="portrait"/>
        <activity android:name=".StartScreen"   android:screenOrientation="portrait"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>