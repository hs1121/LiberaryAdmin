<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LiberaryAdmin" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/gradientTop</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/gradient_background</item>
    </style>
    <style name="MyDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:background">@color/gradientTop</item>
        <item name="titleTextColor">@color/gradientBottom</item>
        <item name="titleTextStyle">@style/TextAppearance.AppCompat.Large</item>
    </style>
    <style name="newIssueDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:background">@color/transparent</item>
        <item name="titleTextColor">@color/gradientBottom</item>
        <item name="titleTextStyle">@style/TextAppearance.AppCompat.Large</item>
    </style>

</resources>