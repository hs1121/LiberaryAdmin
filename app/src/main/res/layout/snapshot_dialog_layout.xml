<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:paddingVertical="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:backgroundTint="@color/gradientTop">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">

       <ImageView
           android:id="@+id/Dialog_snapshot"
           android:layout_width="match_parent"
           android:layout_height="400dp"
           android:src="@drawable/ic_liberary_logo" />
       <View
           android:layout_marginVertical="10dp"
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="@color/gradientBottom"/>

       <com.google.android.material.button.MaterialButton
           android:id="@+id/Dialog_okButton"
           android:layout_width="wrap_content"
           android:layout_height="50dp"
           android:layout_marginTop="10dp"
           android:paddingStart="20dp"
           android:layout_gravity="center"
           android:text="Ok"
           app:backgroundTint="@color/gradientBottom"
           android:textColor="@color/textcolor"
           android:layout_marginBottom="10dp"
           />

   </LinearLayout>



</androidx.cardview.widget.CardView>