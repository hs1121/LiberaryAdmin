<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    android:backgroundTint="@color/gradientTop"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_margin="5dp"
        android:id="@+id/BookList_book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_gravity="center"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_weight=".5"
            android:id="@+id/BookList_image"
            android:src="@drawable/ic_liberary_logo"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:backgroundTint="@color/gradientBottom"
            app:cardCornerRadius="10dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/BookList_bookName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BOOK NAME"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/BookList_authorName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="author name" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/BookList_volume"
                    android:text="VOL 1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/BookList_quantity"
                    android:text="Qnt. 5/10"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.cardview.widget.CardView>