<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="10dp"
    android:backgroundTint="@color/gradientTop"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_margin="5dp"
        android:id="@+id/BookList_book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">



        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:backgroundTint="@color/gradientBottom"
            app:cardCornerRadius="10dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="center"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/IssueList_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID : 1"
                        android:textColor="@color/textcolor"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/IssueList_issueDate"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_toStartOf="@id/IssueList_arrow"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical"
                        android:text="25-1-2021"
                        android:textColor="@color/textcolor"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/IssueList_arrow"
                        android:text="To"
                        android:textColor="@color/textcolor"
                        android:textSize="18sp"
                        android:layout_toStartOf="@id/IssueList_returnDate"
                        android:layout_marginRight="10dp"/>
                    <TextView
                        android:id="@+id/IssueList_returnDate"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:gravity="center_vertical"
                        android:text="25-1-2021"
                        android:textColor="@color/textcolor"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        />
                </RelativeLayout>

                <TextView
                    android:id="@+id/IssueList_bookName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BOOK NAME"
                    android:textColor="@color/textcolor"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />
                <TextView
                android:id="@+id/IssueList_customerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer name"
                android:textColor="@color/textcolor"
                android:textSize="16sp"
                android:textStyle="bold"
                />




            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.cardview.widget.CardView>